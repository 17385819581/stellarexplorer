{
  "extends": ["react-app", "prettier"],
  "plugins": ["prettier"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js"],
      "parser": "@typescript-eslint/parser"
    }
  ],
  "rules": {
    "react/jsx-wrap-multilines": "off",
    "jsx-a11y/anchor-has-content": "off",
    "comma-dangle": ["warn", "always-multiline"],
    "object-curly-spacing": ["warn", "never"],
    "quotes": ["warn", "single"],
    "semi": ["warn", "never"],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "es5"
      }
    ]
  }
}
